@model prova_surpresa_mvc.Models.Matricula

<h2>Excluir Matrícula</h2>
<h3>Você tem certeza de que deseja excluir?</h3>
<div>
    <h4>Matrícula</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Aluno</dt>
        <dd class="col-sm-10">@Model.Aluno.Nome</dd>
        <dt class="col-sm-2">Curso</dt>
        <dd class="col-sm-10">@Model.Curso.Titulo</dd>
        <dt class="col-sm-2">Data da Matrícula</dt>
        <dd class="col-sm-10">@Model.DataMatricula.ToShortDateString()</dd>
        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.Status</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="MatriculaId" />
        <input type="submit" value="Excluir" class="btn btn-danger" />
        <a asp-action="index" class="btn btn-primary">Voltar</a>
    </form>
</div>
