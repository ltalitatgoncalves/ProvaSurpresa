@model prova_surpresa_mvc.Models.Curso

<h2>Excluir Curso</h2>
<h3>Você tem certeza de que deseja excluir?</h3>
<div>
    <h4>Curso</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Título</dt>
        <dd class="col-sm-10">@Model.Titulo</dd>
        <dt class="col-sm-2">Descrição</dt>
        <dd class="col-sm-10">@Model.Descricao</dd>
        <dt class="col-sm-2">Professor</dt>
        <dd class="col-sm-10">@Model.Professor.Nome</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="CursoId" />
        <input type="submit" value="Excluir" class="btn btn-danger" />
        <a asp-action="index" class="btn btn-primary">Voltar</a>
    </form>
</div>
