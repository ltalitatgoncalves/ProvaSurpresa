@model prova_surpresa_mvc.Models.Curso

<h2>Detalhes do Curso</h2>
<div>
    <h4>Curso</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Título</dt>
        <dd class="col-sm-10">@Model.Titulo</dd>
        <dt class="col-sm-2">Descrição</dt>
        <dd class="col-sm-10">@Model.Descricao</dd>
        <dt class="col-sm-2">Professor</dt>
        <dd class="col-sm-10">@Model.Professor.Nome</dd>
        <dt class="col-sm-2">Vagas Disponíveis</dt>
        <dd class="col-sm-10">@Model.VagasDisponiveis</dd>
    </dl>
    <p>
        <a href="@Url.Action("Edit", new { id = Model.CursoId })" class="btn btn-warning">Editar</a>
        <a asp-action="index" class="btn btn-primary">Voltar</a>
    </p>
</div>
