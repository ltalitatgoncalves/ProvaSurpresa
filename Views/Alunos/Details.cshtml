@model prova_surpresa_mvc.Models.Aluno

<h2>Detalhes do Aluno</h2>

<div>
    <h4>@Model.Nome</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Endereço
        </dt>
        <dd class="col-sm-10">
            @Model.Endereco
        </dd>
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Model.Email
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.AlunoId" class="btn btn-warning">Editar</a>
    <a asp-action="index" class="btn btn-primary">Voltar</a>
</div>

