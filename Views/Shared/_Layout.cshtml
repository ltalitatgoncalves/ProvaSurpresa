<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Prova Surpresa MVC</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <style>
        body {
            display: flex;
            height: 100vh;
            margin: 0;
            background-color: #f8f9fa;
        }

        .sidebar {
            width: 250px;
            background-color: #343a40;
            color: white;
            display: flex;
            flex-direction: column;
            padding: 20px;
        }

            .sidebar a {
                color: white;
                text-decoration: none;
                padding: 10px;
                font-size: 1.1rem;
            }

                .sidebar a:hover {
                    background-color: #495057;
                    border-radius: 5px;
                }

            .sidebar .nav-item {
                margin-bottom: 10px;
            }

        .content {
            flex: 1;
            padding: 20px;
        }

        .navbar-brand, .navbar-nav .nav-link {
            color: white !important;
        }
    </style>
</head>
<body>
    <div class="sidebar">
        <h3>Menu</h3>
        <nav class="nav flex-column">
            <a class="nav-item" href="@Url.Action("Index", "Home")">
                <i class="fas fa-home"></i> Home
            </a>
            <a class="nav-item" href="@Url.Action("Index", "Alunos")">
                <i class="fas fa-user-graduate"></i> Alunos
            </a>
            <a class="nav-item" href="@Url.Action("Index", "Professores")">
                <i class="fas fa-chalkboard-teacher"></i> Professores
            </a>
            <a class="nav-item" href="@Url.Action("Index", "Cursos")">
                <i class="fas fa-book"></i> Cursos
            </a>
            <a class="nav-item" href="@Url.Action("Index", "Matriculas")">
                <i class="fas fa-file-alt"></i> Matrículas
            </a>
        </nav>
    </div>
    <div class="content">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @RenderSection("Scripts", required: false)
</body>
</html>
